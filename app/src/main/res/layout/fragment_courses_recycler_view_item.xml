<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_courses_recycler_view_item_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/fragment_courses_recycler_view_item_course_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fragment_courses_recycler_view_item_course_name"/>
    <TextView
        android:id="@+id/fragment_courses_recycler_view_item_course_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fragment_courses_recycler_view_item_course_description"/>
    <Button
        android:id="@+id/fragment_courses_recycler_view_item_go_to_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fragment_courses_recycler_view_item_course_author"
        android:text="@string/go_to_course"/>
</androidx.constraintlayout.widget.ConstraintLayout>